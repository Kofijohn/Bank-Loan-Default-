SPLITTING DATASET
x=np.array(data2[['age', 'ed', 'employ', 'income', 'debtinc', 'creddebt', 'othdebt']])
y = np.array(data2[['default']])
X_train,X_test,y_train,y_test = train_test_split(x,y, test_size=0.2, random_state = 3)

TRAINING MODEL
model1 = LogisticRegression(solver='liblinear').fit(X_train,y_train)
train_model = model1.predict(X_train)
model = accuracy_score(train_model,y_train)
print(f'Accuracy Score = {model}')
print(f'Error_rate = {1-model}')

TESTING MODEL
test_model = model1.predict(X_test)
model = accuracy_score(test_model,y_test)
Error_rate = 1 - model
print(f'Accuracy Score = {model}')
print(f'Error_rate = {Error_rate}')

CONFUSION MATRIX
sns.heatmap(confusion_matrix(y_test,test_model),
                annot = True,
                );
                
print(classification_report(y_test,test_model))
